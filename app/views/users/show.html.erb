<div class="container">
  <div class="row">

  <%= render 'books/left', user: @user, book: @book, isRoom: @isRoom, room: @room, entry: @entry, roomId: @roomId %>

  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td>閲覧数：<%= book.views.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h4>投稿数の前日比・前週比</h4>
    <table class="table table-bordered">
      <thead>
        <th>今日の投稿</th>
        <th>前日の投稿</th>
        <th>前日比</th>
      </thead>
      <tbody>
        <td><%= @today.count %></td>
        <td><%= @yesterday.count %></td>
        <td>
          <% if @yesterday.count == 0 %>
            <%= @today.count * 100 %>%
          <% else %>
            <%= @today.count / @yesterday.count * 100 %>%
          <% end %>
        </td>
      </tbody>
    </table>

    <table class="table table-bordered">
      <thead>
        <th>今週の投稿</th>
        <th>前週の投稿</th>
        <th>前週比</th>
      </thead>
      <tbody>
        <td><%= @this_week.count %></td>
        <td><%= @last_week.count %></td>
        <td>
          <% if @last_week.count == 0 %>
            <%= @this_week.count * 100 %>%
          <% else %>
            <%= @this_week.count / @last_week.count * 100 %>%
          <% end %>
        </td>
      </tbody>
    </table>
  </div>

  </div>
</div>