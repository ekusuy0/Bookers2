<div class="container">
  <div class="row">

  <%= render 'books/left', user: @user, book: @book, isRoom: @isRoom, room: @room, entry: @entry, roomId: @roomId %>

  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td>閲覧数：<%= book.views.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h4>投稿数の前日比・前週比</h4>
    <table class="table table-bordered">
      <thead>
        <th>今日の投稿</th>
        <th>前日の投稿</th>
        <th>前日比</th>
      </thead>
      <tbody>
        <td><%= @today_book.count %></td>
        <td><%= @yesterday_book.count %></td>
        <td>
          <% if @yesterday_book.count == 0 %>
            前日の投稿が0のため計算できません
          <% else %>
            <%= @today_book.count / @yesterday_book.count * 100 %>%
          <% end %>
        </td>
      </tbody>
    </table>

    <table class="table table-bordered">
      <thead>
        <th>今週の投稿</th>
        <th>前週の投稿</th>
        <th>前週比</th>
      </thead>
      <tbody>
        <td><%= @this_week_book.count %></td>
        <td><%= @last_week_book.count %></td>
        <td>
          <% if @last_week_book.count == 0 %>
            前週の投稿が0のため計算できません
          <% else %>
            <%= @this_week_book.count / @last_week_book.count * 100 %>%
          <% end %>
        </td>
      </tbody>
    </table>

    <h4>7日間分の投稿数</h4>
    <table class="table table-bordered">
      <thead>
        <th>6日前</th>
        <th>5日前</th>
        <th>4日前</th>
        <th>3日前</th>
        <th>2日前</th>
        <th>1日前</th>
        <th>今日</th>
      </thead>
      <tbody>
        <td><%= @six_days_ago.count %></td>
        <td><%= @five_days_ago.count %></td>
        <td><%= @four_days_ago.count %></td>
        <td><%= @three_days_ago.count %></td>
        <td><%= @two_days_ago.count %></td>
        <td><%= @yesterday_book.count %></td>
        <td><%= @today_book.count %></td>
      </tbody>
    </table>


    <canvas id="myChart"></canvas>
    <script>
      $(document).on('turbolinks:load', function() {
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
                datasets: [{
                    label: '投稿した本の数',
                    data: [
                      <%= @six_days_ago.count %>,
                      <%= @five_days_ago.count %>,
                      <%= @four_days_ago.count %>,
                      <%= @three_days_ago.count %>,
                      <%= @two_days_ago.count %>,
                      <%= @yesterday_book.count %>,
                      <%= @today_book.count %>
                      ],
                    backgroundColor: "rgba(0, 0, 0, 0)",
                    borderColor: "rgba(0, 0, 255, 1)",
                    tension: 0.4
                }]
            },
            options: {
              title: {
                display: true,
                text: '7日間の投稿数の比較'
              },
              responsive: true,
              scales: {
                y:{
                  suggestedMin: 0,
                  suggestedMax: 10,
                },
                x:{
                  stacked: true
                },
              },
            }
          });
        });
    </script>
  </div>

  </div>
</div>