<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Group</h1>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_field :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :グループ画像 %><br>
          <%= f.file_field :group_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Group', class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>