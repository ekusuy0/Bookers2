<% if @range == "User" %>
  <h1>Users search for "<%= @word %>"</h1>
  <table class="table table-hover table-inverse">
    <% if @users.present? %>
      <thead>
        <th>Image</th>
        <th>Name</th>
        <th></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(80,80) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              フォロー数：<%= user.followings.count %>
            </td>
            <td>
              フォロワー数：<%= user.followers.count %>
            </td>
            <% if user.id == current_user.id %>
              <td></td>
            <% else %>
              <td>
              <% if current_user.following?(user) %>
                <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
              <% end %>
              </td>
            <% end %>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <p>検索結果が見つかりませんでした</p>
    <% end %>
  </table>
<% elsif @range == "Book" || @range == "Tag" %>
  <h1>Books search for "<%= @word %>"</h1>
  <table class="table table-hover table-inverse">
    <% if @books.present? %>
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(80,80) %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <td>
              <% @tags.each do |tag| %>
                <li style="list-style: none;"><%= link_to tag.tag_name, search_path %></li>
              <% end %>
            </td>
            <td class="<%= book.id %>">
              <%= render partial: 'favorites/favorite-btn', locals: { book: book } %>
            </td>
            <td>
              <p>コメント数：<%= book.book_comments.count %></p>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <p>検索結果が見つかりませんでした</p>
    <% end %>
    </table>
<% end %>
