<div class="col-md-3">

  <h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th>
          <%= link_to user_followings_path(user) do %>
            <%= user.followings.count %>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
          <%= link_to user_followers_path(user) do %>
            <%= user.followers.count %>
          <% end %>
          </th>
      </tr>
    </tbody>
  </table>

  <% if user != current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
      <% if (current_user.following?(user)) && (user.following?(current_user)) %>
        <% if isRoom == true %>
          <p class="user-show-room"><a href="/rooms/<%= roomId %>" class="btn btn-success my-2">チャットへ</a></p>
        <% else %>
          <%= form_with model: room do |f| %>
            <%= fields_for entry do |e| %>
              <%= e.hidden_field :user_id, value: user.id %>
            <% end %>
            <%= f.submit "チャットを始める", class:"btn btn-success user-show-chat my-2" %>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
    <% end %>
  <% else %>
    <div class="row">
      <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  <% end %>
  <h2 class="mt-3">New book</h2>

  <%= form_with model: book do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body, class: "form-control "%>
    </div>

    <div id="evaluate-stars">
      <label for="book_rate">Rate</label>
      <%= f.hidden_field :rate, id: :review_star %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>

  <script>
  $(document).on('turbolinks:load', function() {
    $('#evaluate-stars').empty();
    $('#evaluate-stars').raty({
      size: 36,
      starHalf: "<%= asset_path('star-half.png') %>",
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: 'book[rate]',
      half: true,
    });
  });
  </script>


</div>