<div class="container px-5 px-sm-0">
  <%= render 'error', model: @book %>
  <div class="row">

    <%= render 'left', user: current_user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <%= link_to "新しい順", books_path(fast: "true") %> |
      <%= link_to "評価の高い順", books_path(rate_count: "true") %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Tag</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td>
                <%= book.tags.map(&:tag_name).join(',') %>
              </td>
              <td class="<%= book.id %>">
                <%= render partial: 'favorites/favorite-btn', locals: { book: book } %>
              </td>
              <td>
                <p>コメント数：<%= book.book_comments.count %></p>
              </td>
              <td>
                <%= render 'rate', book: book %>
              </td>
              <td class="book-evaluation" date-score="<%= book.rate %>"></td>
              <td>
                <p>PV数：<%= book.views.count %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


