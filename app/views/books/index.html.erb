<%= render 'info', user: current_user %>
<%= render 'create', book: @book %>

<h1>Books</h1>
<table class="table">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>


