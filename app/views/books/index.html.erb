<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'left', user: current_user %>
  </div>

  <h1>Books</h1>
  <table class="table">
    <tbody>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>


